/Applications/Firefox.app
/Applications/Safari.app

% app -t public.tiff
/Applications/Preview.app

% app -f .zshrc
/Applications/TextEdit.app

% app -f /bin/ls
/Applications/Utilities/Terminal.app

% app -b com.apple.Dock
/System/Library/CoreServices/Dock.app
.Ed
